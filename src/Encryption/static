#pragma once

#include <cinttypes>
#include <string>
#include <sstream>
#include <vector>
#include <iomanip>
#include <cstdint>
#include <cstring>
#include <random>

namespace PulsarCrypto {
    using ubyte = uint8_t;
    using bytes = std::vector<ubyte>;
    using big = uint64_t;
    using bigs = std::vector<big>;
    using verybig = __int128;

    struct keypair {
        bytes pub;
        bytes priv;

        keypair(const bytes& pub, const bytes& priv) : pub(pub), priv(priv) {}
    };

    static bytes to_bytes(const std::string& raw) {
        bytes res;
        for (auto c : raw) res.push_back(c);
        return res;
    }

    static std::string from_bytes(const bytes& b) {
        std::string res; 
        for (auto c : b) res += c;
        return res;
    }
};